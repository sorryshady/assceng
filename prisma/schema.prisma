generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Department {
    LSGD
    PWD
    IRRIGATION
}

enum Designation {
    ASSISTANT_ENGINEER
    ASSISTANT_EXECUTIVE_ENGINEER
    EXECUTIVE_ENGINEER
    SUPERINTENDING_ENGINEER
    CHIEF_ENGINEER
}

enum District {
    TVM // Thiruvananthapuram
    KLM // Kollam
    PTA // Pathanamthitta
    ALP // Alappuzha
    KTM // Kottayam
    IDK // Idukki
    EKM // Ernakulam
    TRR // Thrissur
    PKD // Palakkad
    MPM // Malappuram
    KZD // Kozhikode
    WYD // Wayanad
    KNR // Kannur
    KSD // Kasaragod
}

enum EmploymentStatus {
    WORKING
    RETIRED
    EXPIRED
}

enum Gender {
    MALE
    FEMALE
    TRANSGENDER
}

enum UserRole {
    ADMIN
    REGULAR
}

enum CommitteeRole {
    NONE
    STATE
    DISTRICT
}

enum VerifiedStatus {
    VERIFIED
    PENDING
    REJECTED
}

model User {
    id               String           @id @default(cuid())
    clerkId          String?          @unique
    name             String
    department       Department
    designation      Designation
    officeAddress    String
    workingDistrict  District
    employmentStatus EmploymentStatus
    email            String           @unique
    gender           Gender
    permanentAddress String
    homeDistrict     District
    phoneNumber      String?
    mobileNumber     String
    bloodGroup       String
    dateOfBirth      DateTime
    locality         String
    photoUrl         String?
    membershipNumber Int?             @unique
    committeeStatus  CommitteeRole    @default(NONE)
    userRole         UserRole         @default(REGULAR)
    verifiedStatus   VerifiedStatus   @default(PENDING)
}
